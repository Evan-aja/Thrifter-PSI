<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/home_layout"
        android:layout_width="match_parent"
        android:background="@drawable/custom_app_bar_background"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/bar"
            android:layout_width="match_parent"
            android:layout_height="150sp">

            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchbar"
                android:layout_width="320sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="15sp"
                android:background="@drawable/custom_app_search_background"></androidx.appcompat.widget.SearchView>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:layout_marginTop="30sp"
                android:layout_toRightOf="@id/searchbar"
                android:background="@drawable/icon2"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"></ImageButton>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/searchbar"

                android:paddingTop="10sp"
                android:text="Thrifter."
                android:textAlignment="center"
                android:textColor="#393E46"
                android:textSize="48sp"
                android:textStyle="bold"
                app:fontFamily="@font/manuale_bold"></TextView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_app_mid_background">
            <RelativeLayout
                android:layout_width="match_parent"
                android:paddingTop="10sp"
                android:id="@+id/midbar1"
                android:layout_height="45sp">

                <TextView
                    android:id="@+id/trendtxt"
                    android:layout_width="150sp"
                    android:layout_height="match_parent"

                    android:paddingLeft="20sp"
                    android:text="Trending"

                    android:textFontWeight="1"
                    android:textSize="19sp"></TextView>

                <TextView
                    android:id="@+id/seeAll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20sp"
                    android:layout_toRightOf="@id/trendtxt"

                    android:text="Lihat Semua"
                    android:textAlignment="textEnd"

                    android:textSize="19sp"></TextView>
            </RelativeLayout>

            <ScrollView
                android:id="@+id/listtrend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/midbar1">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recvtrending"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"></androidx.recyclerview.widget.RecyclerView>
            </ScrollView>
            <RelativeLayout
                android:id="@+id/titlekategoritxt"
                android:layout_marginTop="10sp"
                android:layout_below="@id/listtrend"
                android:layout_width="match_parent"
                android:layout_marginBottom="5sp"
                android:layout_height="45sp">
                <TextView
                    android:id="@+id/kategoritxt"
                    android:paddingLeft="20sp"
                    android:paddingTop="5sp"
                    android:layout_width="200sp"
                    android:layout_height="match_parent"
                    android:textSize="19sp"
                    android:text="Kategori"></TextView>

                <TextView
                    android:id="@+id/lihatsemuatxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20sp"

                    android:paddingTop="5sp"
                    android:text="Lihat Semua"
                    android:textAlignment="textEnd"

                    android:textSize="19sp"></TextView>




            </RelativeLayout>
            <HorizontalScrollView
                android:layout_below="@id/titlekategoritxt"
                android:layout_width="wrap_content"
                android:id="@+id/listkategori"
                android:layout_marginStart="20sp"
                android:layout_height="50sp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50sp">
                    <Button
                        android:id="@+id/btnall"
                        android:layout_width="wrap_content"
                        android:textAllCaps="false"
                        android:text="All"
                        android:backgroundTint="@color/white"
                        android:textColor="@color/black"

                        android:layout_height="wrap_content">
                    </Button>
                    <Button
                        android:layout_width="wrap_content"
                        android:textAllCaps="false"
                        android:text="T-Shirt"
                        android:backgroundTint="#3E4042"
                        android:layout_marginStart="10sp"

                        android:layout_height="wrap_content">
                    </Button>
                    <Button
                        android:textAllCaps="false"
                        android:text="Jackets"
                        android:backgroundTint="#3E4042"

                        android:layout_marginStart="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </Button>
                    <Button
                        android:textAllCaps="false"
                        android:text="Shirt"
                        android:backgroundTint="#3E4042"

                        android:layout_marginStart="10sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </Button>
                    <Button

                        android:textAllCaps="false"
                        android:backgroundTint="#3E4042"
                        android:layout_marginStart="10sp"
                        android:text="Jeans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </Button>
                </LinearLayout>
            </HorizontalScrollView>
            <ScrollView
                android:layout_marginTop="10sp"
                android:layout_below="@id/listkategori"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:orientation="vertical"
                    android:id="@+id/recvlist_all"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </androidx.recyclerview.widget.RecyclerView>
            </ScrollView>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="180sp"
        android:background="@color/white"
        android:layout_height="200sp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginTop="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginLeft="10sp"
                android:id="@+id/allimg"
                android:background="@drawable/custom_item_image_shape_background"
                android:layout_width="150sp"
                android:layout_height="130sp">
            </ImageView>
            <TextView
                android:layout_marginTop="10sp"
                android:id="@+id/itemname_all"
                android:layout_below="@id/allimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15sp"
                android:textSize="16sp"
                android:textColor="@color/blackcustom2"
                android:fontFamily="@font/inter_regular"
                android:text="Nama Pakaian">
            </TextView>
            <ImageView
                android:layout_marginStart="12sp"
                android:layout_marginTop="27sp"
                android:layout_below="@id/allimg"
                android:layout_toRightOf="@id/itemname_all"
                android:layout_width="wrap_content"
                android:background="@drawable/icon"
                android:layout_height="wrap_content">
            </ImageView>
            <TextView
                android:id="@+id/itemharga_all"
                android:layout_marginTop="2sp"
                android:layout_marginLeft="15sp"
                android:layout_below="@id/itemname_all"
                android:layout_width="wrap_content"
                android:text="Rp 120.000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/blackcustom2"
                android:fontFamily="@font/inter_regular"
                android:layout_height="wrap_content">
            </TextView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>